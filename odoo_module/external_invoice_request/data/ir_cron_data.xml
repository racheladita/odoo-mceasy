<odoo>
  <record id="ir_cron_auto_approve_invoice_request" model="ir.cron">
    <field name="name">Auto Approve Invoice Requests</field>
    <field name="model_id" ref="model_invoice_request"/>
    <field name="state">code</field>
    <field name="code">model.search([('status','=','pending')]).action_approval_request()</field>
    <field name="interval_number">5</field>
    <field name="interval_type">minutes</field>
    <field name="active">True</field>
  </record>
</odoo>
